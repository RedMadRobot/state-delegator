    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.redmadrobot.MainActivity">

    <Button
        android:id="@+id/button_open_loading_state_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Loading activity" />
    <Button
        android:id="@+id/button_open_screen_state_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open ScreenState activity" />

</LinearLayout>
